# Copy this file to .env and fill in values. Never commit .env.
# Database (PostgreSQL)
# For local Docker: postgresql://postgres:postgres@localhost:5432/aya_photography
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE"

# NextAuth
# Use http://localhost:3000 for local; replace with your domain or IP when deployed
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-long-random-secret-with-openssl-rand-base64-32"

# Resend (transactional email)
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="Aya Eye <noreply@yourdomain.com>"

# S3-compatible storage (MinIO or AWS S3)
# MinIO example: endpoint http://localhost:9000
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_PORTFOLIO_BUCKET="aya-portfolio"
S3_RECEIPTS_BUCKET="aya-receipts"
# Set to "true" for MinIO / custom endpoint (path-style)
S3_FORCE_PATH_STYLE="true"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
